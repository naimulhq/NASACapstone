<MyGrid>
	GridLayout:
		cols:2
		rows:2
		size: root.width, root.height
		GridLayout:
			cols:1
			size_hint_y:None 
			height:root.height*3/4
			size_hint_x:None
			width:root.width*3/4
			Label:
				text: "Camera Feed"
		GridLayout:
			rows:3
			size_hint_y:None 
			height:root.height*3/4
			size_hint_x:None
			width:root.width/4

			Button:
				text: "Previous"
				on_press: root.pressed_previous()
         
			Button:
				text: "Validate"
				on_press: root.pressed_validate()
        			 
			Button:
				text: "Forward"
				on_press: root.pressed_forward()
        			 
		GridLayout:

			cols:1
			size_hint_y:None 
			height:root.height/4
			size_hint_x:None
			width:root.width*3/4
			Label:
				text: "Text Output"

		GridLayout:
			cols:1
			size_hint_y:None 
			height:root.height/4
			size_hint_x:None
			width:root.width/4
			Image:
				id: argus_image
				source: "project_argus.png"

